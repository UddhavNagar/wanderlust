<%if(success && success.length){ %> 
    <div1 class="alert alert-success alert-dismissible fade show col-6 offset-4" role="alert">
        <%=success%>
        <button 
            type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="close"
        ></button>
    </div1>
<%}%>

<%if(error && error.length){ %> 
    <div1 class="alert alert-danger alert-dismissible fade show col-6 offset-4" role="alert">
        <%=error%>
        <button 
            type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="close"
        ></button>
    </div1>
<%}%>

